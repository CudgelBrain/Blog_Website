<div class="author">
    <h1 class="author_heading">こんにちは！スネハです</h1>
    <p class="author_body">フルスタック開発者</p>
</div>

<img src="/images/girl.jpg" alt="woman looking the other way" class="hero_image" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading"> Latest Posts</h2>
    <% data.forEach(post => { %>
        <ul class="article_ul">
         
            <li>
                <a href="/post/ <%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article_list_date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
            <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">
            &lt; View Older Post
        </a>
    <% } %>

    
</section>